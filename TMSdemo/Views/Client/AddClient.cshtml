
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="info-box mb-4 bg-black elevation-5">
    <span class="info-box-icon"><i class="fas fa-edit"></i></span>

    <div class="info-box-content">
        <span class="info-box-number">CLIENT MASTER</span>
        <span class="info-box-text">Good Luck!&nbsp;<i class="far fa-thumbs-up"></i></span>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-black elevation-2">
            <div class="card-header bg-black">
                <h3 class="card-title">Client Form</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body bg-gradient-dark">
                <form role="form">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label for="clientname" class="text-lightblue">Client Name</label>
                                <input type="text" class="form-control bg-gray border-0" id="clientname" maxlength="49" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="text-lightblue">Abbreviation</label>
                                <input type="text" class="form-control bg-gray border-0 abrcheck" placeholder="Client:APPLE Abbreviation:APL" id="clientabr" maxlength="4" />
                                <p>note : <i>abbreviation means shortnames</i></p>
                               
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label class="text-lightblue">Contact Number</label>
                                <input type="text" class="form-control bg-gray border-0" id="contactno"  maxlength="20"/>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="text-lightblue">Contact person</label>
                                <input type="text" class="form-control bg-gray border-0" id="contactprsn" maxlength="30"/>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-6">
                            <!-- textarea -->
                            <div class="form-group">
                                <label class="text-lightblue">Email</label>
                                <input type="text" class="form-control bg-gray border-0" id="email" maxlength="40"/>
                            </div>
                        </div>

                        
                    </div>

                 

                    <div class="alert alert-default-warning bg-black" id="alertdiv" style="display:none;">
                        <span class="text-danger" id="alertlabel">test</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span class="text-light">x</span>
                        </button>
                    </div>

                    <div class="row">
                        <input type="submit" value="Add Client" class="btn btn-block btn-secondary bg-indigo btn-flat elevation-3" id="submitclient" />
                    </div>




                </form>
            </div>
        </div>

    </div>
</div>