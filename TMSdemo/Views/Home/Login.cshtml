

@model TMSdemo.Models.Employee
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="login-dark">

    <form method="post">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <i class="icon ion-ios-locked-outline"></i>

        </div>
        @if (TempData["succmsg"] != null)
        {
            <div class="form-group">
                <p>@TempData["succmsg"]</p>

            </div>

        }
        @if (TempData["exception"] != null)
        {
            <div class="form-group">
                <p>@TempData["exception"]</p>

            </div>
        }
        <div class="form-group">
            @Html.EditorFor(model => model.EmpID, new { htmlAttributes = new { @class = "form-control", placeholder = "ID", @id = "empid" } })
            <div id="idvalidation" class="text-danger" style="display: none;"></div>
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @id = "password" , maxlength = "20" } })
            <div id="passwordvalidation" class="text-danger" style="display: none;"></div>
        </div>
        <div class="form-group">

            <input type="submit" value="Login" class="btn btn-primary btn-block" id="login-button" />
        </div>

        <a href="@Url.Action("Signup", "Home")" class="forgot">Sign up</a>

    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
